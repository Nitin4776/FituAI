<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Base application theme, dependent on the API level. This theme is applied to the Guide running app, which is the host for the Guide developer experience.
    -->
    <style name="Theme.App" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>
    </style>
</resources>
